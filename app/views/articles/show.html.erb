<script src='//web-toolkit.global.sky.com/2.2.11/scripts/toolkit.min.js'></script>
<link rel="stylesheet" href="//web-toolkit.global.sky.com/2.2.11/stylesheets/toolkit.css"/>
<link rel="stylesheet" href="//web-toolkit.global.sky.com/2.2.11/fonts/skycons.css"/>

<body class="grid-1140">
<h1><%= @article.title %></h1>

<p>
  <%= @article.text %>
</p>

<h3>Comments</h3>
<% @article.comments.each do |comment| %>
    <p>
      <strong><%= comment.commenter %>:</strong>
      <br>
      <%= comment.body %>
      <div>
        <%= link_to 'Delete'%>
      </div>
    </p>
<% end %>

<h3>Add a comment:</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <button type="submit" class="btn primary">Submit</button>
    </p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', root_path %>

</body>