<h1 class="page-title">Jonathan's blog</h1>

<a href="/articles/new" class="btn primary">New article</a>

<% @articles.each do |article| %>
  <h2><%= article.title %></h2>
    <p><%= article.text %></p>

    <p><%= link_to 'Read', article_path(article) %> |
    <%= link_to 'Edit', edit_article_path(article) %> |
    <%= link_to 'Destroy', article_path(article),
                         method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>